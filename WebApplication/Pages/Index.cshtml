@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            &nbsp;
            <button id="btn_Search" class="btn btn-primary">
                Search
            </button>
        </div>
    </div>
</form>

@if (Model.Forecast.ToList().Count > 0)
{
    <div id="div_Forcast" style=" padding-top: 50px;" class="row">
        @foreach (var item in Model.Forecast)
        {
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <strong>@item.name</strong>
                        </div>
                        <div class="row">
                            @item.shortForecast
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@item.icon" />
                    </div>
                    <div class="col-md-2">
                        <div class="row">

                        </div>
                        <div class="row">
                            <strong>@item.temperature° @item.temperatureUnit</strong>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        }
    </div>
}
else if(Model.FirstTime == true)
{
    <h4>Result Not Found!</h4>
}
<div class="spanner">
    <div class="loader"></div>
    <p>Please wait...</p>
</div>
